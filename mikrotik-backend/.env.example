# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
# Option 1: Use DATABASE_URL (connection string format)
# DATABASE_URL=postgres://postgres:YOUR_PASSWORD@localhost:5432/wifi_billing

# Option 2: Use individual variables (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wifi_billing
DB_USER=postgres
DB_PASSWORD=your_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# RADIUS Server Configuration
RADIUS_PORT=1812
RADIUS_ACCOUNTING_PORT=1813
RADIUS_SECRET=your_radius_secret_key_here
RADIUS_NAS_IDENTIFIER=MikroTik-Gateway

# MikroTik Router Configuration
MIKROTIK_HOST=192.168.88.1
MIKROTIK_PORT=8728
MIKROTIK_USERNAME=admin
MIKROTIK_PASSWORD=your_mikrotik_password
MIKROTIK_TIMEOUT=5000

# Session Configuration
SESSION_INTERIM_UPDATE_INTERVAL=60
SESSION_IDLE_TIMEOUT=300
SESSION_CLEANUP_INTERVAL=300

# Security
API_SECRET_KEY=your_api_secret_key_here
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
RADIUS_LOG_FILE=logs/radius.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
